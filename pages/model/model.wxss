.page {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: linear-gradient(180deg, #d7d8dd 0%, #d1d2d7 100%);
}

.canvas-wrap {
  flex: 1;
  min-height: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx 14rpx 8rpx;
}

.model-frame {
  width: 92%;
  height: 90%;
  border-radius: 26rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.78);
  background: rgba(255, 255, 255, 0.12);
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.55);
  overflow: hidden;
  box-sizing: border-box;
}

.webgl-canvas {
  width: 100%;
  height: 100%;
}

.controls {
  padding: 4rpx 12rpx calc(10rpx + env(safe-area-inset-bottom));
  background: rgba(226, 227, 232, 0.35);
  font-family: "SF Pro Text", -apple-system, BlinkMacSystemFont, "PingFang SC", sans-serif;
}

.panel {
  max-height: 42vh;
  overflow-y: auto;
  padding: 12rpx 14rpx;
  border-radius: 22rpx;
  background: rgba(250, 250, 252, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.95);
  box-shadow: 0 8rpx 22rpx rgba(15, 23, 42, 0.12);
}

.panel-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.panel-title {
  color: #111114;
  font-size: 25rpx;
  font-weight: 650;
}

.panel-subtitle {
  color: #8b8d95;
  font-size: 19rpx;
  font-weight: 500;
}

.control-item {
  padding: 7rpx 0;
  border-bottom: 1rpx solid rgba(60, 60, 67, 0.09);
}

.control-item:last-of-type {
  border-bottom: none;
  padding-bottom: 2rpx;
}

.label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 2rpx;
}

.label {
  color: #1c1c1e;
  font-size: 22rpx;
  font-weight: 580;
}

.value {
  color: #2c2c30;
  font-size: 21rpx;
  font-weight: 620;
  min-width: 86rpx;
  text-align: right;
}

.size-slider {
  margin: 0;
}

.sub-label-row {
  margin-top: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sub-label {
  color: #63656d;
  font-size: 18rpx;
}

.sub-value {
  color: #2f333b;
  font-size: 18rpx;
  font-weight: 560;
}

.hint {
  margin-top: 8rpx;
  color: #7f818a;
  font-size: 20rpx;
  line-height: 1.5;
  text-align: center;
}

.section-title {
  margin-top: 10rpx;
  padding-top: 10rpx;
  border-top: 1rpx solid rgba(60, 60, 67, 0.1);
  color: #1f2024;
  font-size: 22rpx;
  font-weight: 620;
}

.ble-status {
  margin-top: 4rpx;
  color: #5f636f;
  font-size: 18rpx;
}

.ble-actions {
  margin-top: 8rpx;
  display: flex;
  gap: 10rpx;
}

.ble-btn {
  flex: 1;
  margin: 0;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 18rpx;
  border-radius: 14rpx;
  background: rgba(246, 247, 251, 0.95);
  color: #1f2024;
  border: 1rpx solid rgba(60, 60, 67, 0.14);
}

.device-list {
  margin-top: 8rpx;
  max-height: 130rpx;
  overflow-y: auto;
}

.device-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx 10rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.72);
  margin-bottom: 6rpx;
}

.device-name {
  color: #21242b;
  font-size: 18rpx;
  max-width: 68%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.connect-btn {
  margin: 0;
  height: 42rpx;
  line-height: 42rpx;
  font-size: 18rpx;
  border-radius: 12rpx;
  padding: 0 18rpx;
  background: #0a84ff;
  color: #fff;
}

.json-title {
  margin-top: 8rpx;
  color: #1f2024;
  font-size: 20rpx;
  font-weight: 600;
}

.json-box {
  margin-top: 4rpx;
  padding: 8rpx;
  border-radius: 12rpx;
  background: rgba(12, 17, 29, 0.9);
  color: #d7e2ff;
  font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
  font-size: 16rpx;
  line-height: 1.45;
  max-height: 110rpx;
  overflow-y: auto;
  word-break: break-all;
}
