.page {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.webgl-canvas {
  width: 100%;
  height: 100%;
}

.hint {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 24rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.55);
  color: #ffffff;
  font-size: 24rpx;
  line-height: 1.5;
}
